# PT-STEM Backend 环境配置文件

# 服务器配置
HOST=127.0.0.1
PORT=8000
DEBUG=true

# PTSL 配置
PTSL_HOST=127.0.0.1
PTSL_PORT=31416
PTSL_TIMEOUT=30

# Pro Tools 配置
PROTOOLS_SESSION_PATH=
PROTOOLS_AUDIO_FORMAT=WAV
PROTOOLS_SAMPLE_RATE=48000
PROTOOLS_BIT_DEPTH=24

# 音频处理配置
MAX_AUDIO_FILE_SIZE=524288000  # 500MB
SUPPORTED_AUDIO_FORMATS=wav,aiff,mp3,flac,m4a

# 输出目录配置
OUTPUT_DIR=./output
TEMP_DIR=./temp

# STEM 分离配置
STEM_TYPES=drums,bass,vocals,other
STEM_QUALITY=high

# 安全配置
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,file://

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log